---
import { Image } from "astro:assets";

type Props = {
  title: string;
  description: string;
  image: {
    url: string;
    alt: string;
  };
  button?: {
    label: string;
    href: string;
  };
};

const { title, description, image, button } = Astro.props;
---

<div
  class="flex min-w-[15rem] flex-1 flex-col rounded-xl bg-cyan-50 shadow ring-1 ring-cyan-900/5 sm:max-w-xs"
>
  <Image
    src={image.url}
    alt={image.alt}
    width="3840"
    height="2160"
    class="rounded-t-xl"
    loading="eager"
  />
  <div class="flex grow flex-col justify-between gap-4 p-6">
    <div>
      <h3 class="mb-1 text-xl font-bold text-cyan-900">{title}</h3>
      <p>
        {description}
      </p>
    </div>
    {
      button && (
        <a
          href={button.href}
          class="w-fit self-end whitespace-nowrap py-2 font-semibold text-cyan-700 underline underline-offset-8 transition-colors hover:text-cyan-500"
        >
          {button.label}
        </a>
      )
    }
  </div>
</div>
